@model band_catalogue.Models.Album

@{
    ViewData["Title"] = "Album Details";
}

<h2>@Model.Title</h2>
<h4>By @Model.Band.BandName</h4>
<p><strong>Released:</strong> @Model.ReleaseYear</p>
<p><strong>Genre:</strong> @Model.Band.Genre</p>
<p><strong>Country:</strong> @Model.Band.Country</p>

<h3>Tracklist</h3>
@if (Model.Songs.Any())
{
    <ul>
        @foreach (var song in Model.Songs)
        {
            <li>@song.Title (@song.Duration.ToString(@"mm\:ss"))</li>
        }
    </ul>
}
else
{
    <p>No songs found for this album.</p>
}
<a asp-controller="Songs" asp-action="Index" asp-route-albumId="@Model.AlbumId" class="btn btn-info">View Songs</a>

<a asp-action="Index" class="btn btn-primary">Back to Albums</a>
<a asp-action="Edit" asp-route-id="@Model.AlbumId" class="btn btn-warning">Edit Album</a>
<a asp-action="Delete" asp-route-id="@Model.AlbumId" class="btn btn-danger">Delete Album</a>

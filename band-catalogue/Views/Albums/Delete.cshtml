@model band_catalogue.Models.Album

@{
    ViewData["Title"] = "Delete Album";
}

<h2>Delete Album</h2>
<h3>Are you sure you want to delete this album?</h3>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Band:</strong> @Model.Band.BandName</p>
    <p><strong>Release Year:</strong> @Model.ReleaseYear</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.AlbumId" /> <!-- Make sure this exists -->
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

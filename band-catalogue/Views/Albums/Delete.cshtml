@model band_catalogue.Models.Album

@{
    ViewData["Title"] = "Delete Album";
}

<h2>Delete Album</h2>

<h3>Are you sure you want to delete this album?</h3>
<div>
    <h4>@Model.Title</h4>
    <p>Release Year: @Model.ReleaseYear</p>
    <p>Band: @Model.Band.BandName</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AlbumId" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

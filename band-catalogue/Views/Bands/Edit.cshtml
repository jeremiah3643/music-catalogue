@model band_catalogue.Models.Band

<h2>Edit Band</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="BandId" />

    <div class="mb-3">
        <label class="form-label">Band Name</label>
        <input asp-for="BandName" class="form-control" />
        <span asp-validation-for="BandName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Genre</label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Country</label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Year Formed</label>
        <input asp-for="FormedYear" class="form-control" />
        <span asp-validation-for="FormedYear" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model band_catalogue.Models.Song

@{
    ViewData["Title"] = "Delete Song";
}

<h2>Delete Song</h2>
<h3>Are you sure you want to delete this song?</h3>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Duration:</strong> @Model.Duration</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.SongId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-albumId="@Model.AlbumId" class="btn btn-secondary">Cancel</a>
</form>
